    <div class="card">
      <div class="card-header">
        <h5 class="card-category">Livreur</h5>
      </div>
      <div class="card-body">

        <h2>{{ livreur.prenom|capitalize }} {{ livreur.nom|upper }} </h2>
        <i>utilise {{ livreur.vehicule }}</i>

        <p class="mt-4">
          <a href="{{ path('bb_livreur_home') }}" class="btn btn-outline-dark">
