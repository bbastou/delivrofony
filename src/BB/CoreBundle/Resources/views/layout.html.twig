<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}BBastou{% endblock %}</title>
    {% block stylesheets %}
      <link rel="stylesheet" href="//stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
      <link href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
      <link href="//fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
      <link rel="stylesheet" href="{{ asset('bundles/bbcore/css/main.css') }}" type="text/css" />
    {% endblock %}
  </head>

  <body>
  <div class="wrapper">

    <div class="sidebar">
      <div class="sidebar-wrapper">
        
        <div class="logo text-white text-center"><h3>Menu</h3></div>

        <ul class="nav">
        
          <li {% if nbPages is defined %} class="active" {% endif %} >
            <a href="{{ path('bb_livreur_home') }}" class="nav-link">
              <i class="fa fa-list"></i><p>Liste</p>
            </a>
          </li>
          <li {% if pageAjout is defined %} class="active" {% endif %}>
            <a href="{{ path('bb_livreur_add') }}" class="nav-link">
              <i class="fa fa-plus-circle"></i><p>Ajouter</p>
            </a>
          </li>
          {% if livreur is defined %}
          <li class="active">
            <a href="{{ path('bb_livreur_view', {'id': livreur.id}) }}" class="nav-link">
              <i class="fa fa-bicycle"></i><p>{{ livreur.prenom|capitalize }} {{ livreur.nom|upper }}</p>
            </a>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>

    <div class="main-panel">
        {% block body %}
        {% endblock %}
        <footer class="footer text-right mr-4">
          <p>BBastou</p>
        </footer>
    </div>
  </div>

  {% block javascripts %}
    <script src="//code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="//stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  {% endblock %}

  </body>
</html>